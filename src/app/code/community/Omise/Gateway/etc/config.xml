<?xml version="1.0"?>
<!--
/**
 * Module configuration
 *
 * @author Omise Co., Ltd.
 */
-->
<config>
    <!--
    /**
     * Module defination
     */
    -->
    <modules>
        <Omise_Gateway>
            <version>1.2.0</version>
        </Omise_Gateway>
    </modules>

    <!--
    /**
     * Global variables
     */
    -->
    <global>
        <models>
            <omise_gateway>
                <class>Omise_Gateway_Model</class>
                <resourceModel>omise_gateway_resource</resourceModel>
            </omise_gateway>
            <omise_gateway_resource>
                <class>Omise_Gateway_Model_Resource</class>
                <entities>
                    <omise>
                        <table>omise_gateway</table>
                    </omise>
                </entities>
            </omise_gateway_resource>
        </models>

        <events>
            <sales_model_service_quote_submit_failure>
                <observers>
                    <omise_handle_sales_model_service_quote_submit_failure>
                        <class>omise_gateway/observer</class>
                        <method>handleQuoteSubmitFailure</method>
                    </omise_handle_sales_model_service_quote_submit_failure>
                </observers>
            </sales_model_service_quote_submit_failure>
        </events>

        <resources>
            <omise_gateway_setup>
                <setup>
                    <module>Omise_Gateway</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </omise_gateway_setup>
        </resources>

        <blocks>
            <omise_gateway_adminhtml>
                <class>Omise_Gateway_Block_Adminhtml</class>
            </omise_gateway_adminhtml>

            <omise_gateway>
                <class>Omise_Gateway_Block</class>
            </omise_gateway>
        </blocks>

        <helpers>
            <omise_gateway>
                <class>Omise_Gateway_Helper</class>
            </omise_gateway>
        </helpers>

        <payment>
            <omise>

                <internet_banking>
                    <internet_banking_scb>
                        <name>Siam Commercial Bank</name>
                    </internet_banking_scb>
                    <internet_banking_ktb>
                        <name>Krungthai Bank</name>
                    </internet_banking_ktb>
                    <internet_banking_bay>
                        <name>Krungsri Bank</name>
                    </internet_banking_bay>
                    <internet_banking_bbl>
                        <name>Bangkok Bank</name>
                    </internet_banking_bbl>
                </internet_banking>

                <installment>
                    <installment_bay>
                        <name>Krungsri</name>
                        <monthly_minimum_subunits_thb>50000</monthly_minimum_subunits_thb>
                    </installment_bay>
                    <installment_first_choice>
                        <name>First Choice</name>
                        <interest_rate>1.3</interest_rate>
                    </installment_first_choice>
                    <installment_kbank>
                        <name>KBank</name>
                    </installment_kbank>
                    <installment_bbl>
                        <name>Bangkok Bank</name>
                        <monthly_minimum_subunits_thb>50000</monthly_minimum_subunits_thb>
                    </installment_bbl>
                    <installment_ktc>
                        <name>KTC</name>
                    </installment_ktc>
                </installment>

            </omise>
        </payment>

    </global>

    <!--
    /**
     * Admin configuration
     */
    -->
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Omise_Gateway before="Mage_Adminhtml">Omise_Gateway_Adminhtml</Omise_Gateway>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <frontend>
        <routers>
            <omise_gateway>
                <use>standard</use>
                <args>
                    <module>Omise_Gateway</module>
                    <frontName>omise</frontName>
                </args>
            </omise_gateway>
        </routers>
        <layout>
            <updates>
                <compare>
                    <file>omise/gateway.xml</file>
                </compare>
            </updates>
        </layout>        
    </frontend>

    <!--
    /**
     * Payment Method configuration for front-end
     */
    -->
    <default>
        <payment>

            <omise_gateway>
                <active>1</active>
                <order_status>1</order_status>
                <payment_action>authorize</payment_action>
                <model>omise_gateway/payment_creditcard</model>
                <cctypes>VI,MC</cctypes>
                <title>Credit card (Powered by Omise)</title>
                <osc_support>0</osc_support>
            </omise_gateway>

            <omise_offsite_internet_banking>
                <active>0</active>
                <payment_action>authorize_capture</payment_action>
                <model>omise_gateway/payment_offsiteinternetbanking</model>
                <title>Internet banking</title>
            </omise_offsite_internet_banking>

            <omise_offsite_alipay>
                <active>0</active>
                <payment_action>order</payment_action>
                <model>omise_gateway/payment_offsitealipay</model>
                <title>Alipay</title>
            </omise_offsite_alipay>

            <omise_offsite_installment>
                <active>0</active>
                <payment_action>authorize_capture</payment_action>
                <model>omise_gateway/payment_offsiteinstallment</model>
                <title>Installment payments</title>
                <default_interest_rate>0.8</default_interest_rate>
                <default_monthly_minimum_subunits_thb>30000</default_monthly_minimum_subunits_thb>
            </omise_offsite_installment>

        </payment>
    </default>
</config>
